    fill-opacity: 0.1; 
}

area|z20-[power=substation] {
    width: 3;
    symbol-size: 6;
    color: white;
    fill-opacity: 0.15; 
}

/* Dynamic text sizes for substations */
area|z12-13[power=substation] {
    text: "name";
    text-color: black;
    text-halo-color: white;
    text-halo-radius: 2;
    text-halo-opacity: 0.8;
